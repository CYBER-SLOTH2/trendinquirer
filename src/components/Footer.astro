---
import type { HTMLAttributes } from "astro/types";

const currentYear = new Date().getFullYear();

type Props = {
  noMarginTop?: boolean;
} & HTMLAttributes<"footer">;

const { noMarginTop = false, class: className, ...attrs } = Astro.props;
---

<footer
  class:list={["app-layout bg-background/50", { "mt-auto": !noMarginTop }, className]}
  {...attrs}
>
  <div class="py-8 border-t border-border">
    <div class="max-w-screen-xl mx-auto px-4 grid grid-cols-1 md:grid-cols-3 gap-6 items-start">
      <div class="md:col-span-2 flex flex-col gap-3">
        <a href="/" class="inline-flex items-center gap-3" aria-label="TrendInquirer home">
          <svg width="48" height="48" viewBox="0 0 400 80" fill="none" aria-hidden="true" class="flex-shrink-0">
            <defs>
              <linearGradient id="g2" x1="0" x2="1" y1="0" y2="0">
                <stop offset="0%" stop-color="#06b6d4" />
                <stop offset="100%" stop-color="#7c3aed" />
              </linearGradient>
            </defs>
            <rect x="8" y="8" width="64" height="64" rx="12" fill="url(#g2)" />
            <path d="M30 22 L44 38" stroke="#fff" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" />
            <circle cx="32" cy="44" r="6" fill="#fff" />
          </svg>
          <div class="text-sm">
            <div class="font-semibold">TrendInquirer</div>
            <div class="text-xs text-muted">Latest Trends, Expert Insights & Breaking News</div>
          </div>
        </a>

        <p class="text-sm text-muted max-w-prose">TrendInquirer provides concise, trustworthy reporting on technology, AI, finance, and world news. Subscribe to our RSS feed or follow our updates for daily insights.</p>
      </div>

      <div class="flex flex-col gap-2">
        <h3 class="text-sm font-semibold">Quick links</h3>
        <ul class="text-sm space-y-2">
          <li><a href="/about/" class="underline">About</a></li>
          <li><a href="/privacy/" class="underline">Privacy</a></li>
          <li><a href="/terms/" class="underline">Terms</a></li>
          <li><a href="/rss.xml" class="underline">RSS</a></li>
        </ul>
      </div>
    </div>

    <div class="mt-6 border-t border-border pt-4">
      <div class="max-w-screen-xl mx-auto px-4 flex flex-col sm:flex-row items-center justify-between text-sm text-muted">
        <div>© {currentYear} TrendInquirer. All rights reserved.</div>
        <div class="mt-2 sm:mt-0">Built for speed — optimized for readers.</div>
      </div>
    </div>
  </div>
</footer>
